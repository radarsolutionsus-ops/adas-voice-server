{
  "name": "adas-voice-server",
  "version": "3.0.0",
  "description": "ADAS First Voice Automation System - Full workflow with OPS/TECH assistants, PDF pipeline, and Google integrations",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "email:start": "curl -X POST http://localhost:8080/email/start",
    "email:stop": "curl -X POST http://localhost:8080/email/stop",
    "email:status": "curl http://localhost:8080/email/status",
    "gas:push": "cd scripts/google_apps_script && npx clasp push",
    "gas:deploy": "cd scripts/google_apps_script && npx clasp push && npx clasp deploy",
    "gas:deployments": "cd scripts/google_apps_script && npx clasp deployments"
  },
  "keywords": [
    "adas",
    "voice",
    "twilio",
    "openai",
    "realtime",
    "bilingual",
    "google-sheets",
    "google-drive",
    "pdf-extraction"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "bcryptjs": "^3.0.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "googleapis": "^144.0.0",
    "js-base64": "^3.7.7",
    "jsonwebtoken": "^9.0.3",
    "openai": "^6.9.1",
    "pdf-parse": "^1.1.1",
    "twilio": "^5.4.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@google/clasp": "^3.1.3"
  }
}
